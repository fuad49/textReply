{
    "apps": [
        {
            "name": "textreply-backend",
            "cwd": "./backend",
            "script": "src/index.js",
            "env": {
                "NODE_ENV": "production",
                "PORT": 4000
            },
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "500M"
        },
        {
            "name": "textreply-frontend",
            "cwd": "./frontend",
            "script": "node_modules/.bin/next",
            "args": "start -p 3000",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3000
            },
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "500M"
        }
    ]
}